<script>
  function openInstagram(username) {
    // The deep link to open Instagram
    var appLink = "instagram://user?username=" + username;

    // Try to open the Instagram app
    var startTime = Date.now();
    window.location.href = appLink;

    // Fallback to web if app doesn't open after a short delay
    setTimeout(function () {
      // Calculate elapsed time
      var elapsedTime = Date.now() - startTime;

      // If less than 2 seconds have passed, the app probably didn't open, so fallback to web
      if (elapsedTime < 2000) {
        window.location.href = "https://www.instagram.com/" + username;
      }
    }, 1500); // Adjust delay if necessary
  }
</script>
